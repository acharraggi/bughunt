html
  head
    title= pageTitle
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block content
      h1 #{pageTitle}
      a(href="/") Home
      &nbsp;
      - if (!user)
        a(href="/login") Login
      - else
        a(href="/account") Account
        &nbsp;
        a(href="/logout") Logout
      img(src='/bug-icon.jpg', width='72', height='72', alt='Bughunt')
      h2 Top Ten High Scores
      div
        table
          thead
            tr
              th User
              th Score
              //-th Date
          tbody
            - each score in scores
              tr 
                td= score.user
                td= score.value
                //-td #{score.created_on.toDateString()}
